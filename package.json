{
  "name": "node-ts-jest-webpack-boiler",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx,js,json,css,md}'",
    "format": "prettier --write",
    "type-check": "tsc --skipLibCheck",
    "test": "jest --passWithNoTests",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pre-start": "run-s clean lint type-check test",
    "start:node": "node ./dist/index.js",
    "start:nodemon": "nodemon ./dist/index.js",
    "start": "run-s pre-start build start:node",
    "start:watch": "run-s pre-start build && run-p build:watch start:nodemon",
    "pre-commit": "run-s clean type-check build test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn pre-commit"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,json,css,md}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "babel-loader": "^8.0.5",
    "husky": "^1.3.1",
    "jest": "^24.6.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  }
}
